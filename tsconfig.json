{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "composite": true,
    "declarationMap": true,
    "outDir": "esm"
  },
  "exclude": [
    "node_modules",
    "wip",
    "esm",
    "cjs"
  ]
}
